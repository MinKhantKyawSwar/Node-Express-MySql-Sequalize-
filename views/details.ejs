<section class="details">
  <h1><%= post.title %></h1>
  <img src="<%= post.imgUrl %>" alt="<%= post.title %>" />
  <p><%= post.description %></p>
  <hr />
  <a href="/admin/post-edit/<%= post.id %>" class="btn-edit">Edit Post</a>
  <form action="/admin/post/<%= post.id %>" method="post">
    <button>Delete Post</button>
  </form>
</section>
